<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">

<!--null허용이 되는값이라면 모든 파라미터를 지정-->
<!--넘어온 Member객체의 getter메서드를 자동 호출하여 값 가져옴-->
	<insert id="insertMember" parameterType="member">
		Insert Into member (id,password,name,nickname,phone,address1,address2,address3,region1,region2,region3,profileImage,adminNo) 
		values(#{id},#{password},#{name},#{nickname},#{phone},#{address1},#{address2},#{address3},#{region1},#{region2},#{region3},#{profileImage},#{adminNo})	
	</insert>
	
	<select id="selectMember" parameterType="String" resultType="member">
		select * from member where id=#{id}
	</select>
	
	<update id="updateMember" parameterType="member">
		 UPDATE member
    SET 
        gradeId = #{gradeId},password = #{password}, name=#{name},nickname = #{nickname},
        phone = #{phone},address1 = #{address1},address2 = #{address2},
        address3 = #{address3},region1 = #{region1},region2 = #{region2},
        region3 = #{region3},profileImage = #{profileImage},location = #{location},
        orderCount = #{orderCount},adminNo = #{adminNo}, fcmToken=#{fcmToken}
    WHERE id = #{id}
	</update>
	
			<!-- 관리자 회원 검색 -->
	<select id="searchMembers" parameterType="map" resultType="member">
		  SELECT * FROM member
		    <where>
		    <choose>
		      <when test="type == 'id'">
		        id = #{word}
		      </when>
		      <when test="type == 'name'">
		        nickname = #{word}
		      </when>
		      <when test="type == 'phone'">
		        phone = #{word}
		      </when>
		    </choose>
		
		    <if test="gradeId != null and gradeId != ''">
		      AND gradeId = #{gradeId}
		    </if>
		  </where>
		 
		  ORDER BY no DESC
	</select>
	
				<!-- 관리자 회원 페이징 리스트 -->
			<select id="searchMembersPaging" parameterType="map" resultType="member">
			  SELECT * FROM member
			  <where>
			    <if test="type != null and word != null and word != ''">
			      ${type} LIKE CONCAT('%', #{word}, '%')
			    </if>
			    <if test="gradeId != null and gradeId != ''">
			      AND gradeId = #{gradeId}
			    </if>
			  </where>
			  ORDER BY no DESC
			  LIMIT #{start}, #{pageSize}
			</select>
			
			<!-- 관리자 회원리스트 총 회원 수 -->
			<select id="countMembers" parameterType="map" resultType="int">
			  SELECT COUNT(*) FROM member
			  <where>
			    <if test="type != null and word != null and word != ''">
			      ${type} LIKE CONCAT('%', #{word}, '%')
			    </if>
			    <if test="gradeId != null and gradeId != ''">
			      AND gradeId = #{gradeId}
			    </if>
			  </where>
			</select> 
			
			<select id="selectAdmin" resultType="member">
  				SELECT * FROM member
 				 WHERE adminNo = 1
			</select>
	
		
</mapper>